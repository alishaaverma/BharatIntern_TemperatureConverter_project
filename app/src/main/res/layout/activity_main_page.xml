<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainPage"
    android:orientation="vertical"
    android:background="@color/c">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="90dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/adamina"
            android:text="Temperatures To Convert"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="90dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="35dp"></TextView>


        <Button
            android:id="@+id/btn_celsius"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/button"
            android:text="Celsius"
            android:textAllCaps="false"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="35dp"></Button>
        <Button
            android:id="@+id/btn_fahren"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:text="Fahrenheit"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_marginTop="15dp"
            android:textSize="35dp"></Button>
        <Button
            android:id="@+id/btn_kelvin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:layout_marginTop="15dp"
            android:text="Kelvin"
            android:textAllCaps="false"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="35dp"></Button>
        <Button
            android:id="@+id/btn_rankine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:text="Rankine"
            android:textAllCaps="false"
            android:padding="10dp"
            android:textColor="@color/white"
            android:layout_marginTop="15dp"
            android:textSize="35dp"></Button>
    </LinearLayout>

</LinearLayout>