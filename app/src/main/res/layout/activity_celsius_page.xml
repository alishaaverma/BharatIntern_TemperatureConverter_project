<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CelsiusPage"
    android:orientation="vertical"
    android:background="@color/c">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/adamina"
                android:text="Celsius To"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="50dp"
                android:textColor="@color/black"
                android:textSize="40dp">
            </TextView>

            <EditText
                android:id="@+id/inputc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@color/white"
                android:fontFamily="@font/alice"
                android:hint="enter temperature"
                android:padding="5dp"
                android:inputType="numberDecimal"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="35dp"
                android:textStyle="bold"></EditText>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:gravity="center">
                <Button
                    android:id="@+id/btn_CF"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button"
                    android:text="Fahrenheit"
                    android:textAllCaps="false"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textSize="30dp"></Button>
                <Button
                    android:id="@+id/btn_CK"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button"
                    android:text="Kelvin"
                    android:textAllCaps="false"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textSize="30dp"></Button>
                <Button
                    android:id="@+id/btn_CR"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button"
                    android:text="Rankine"
                    android:textAllCaps="false"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textSize="30dp"></Button>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/adamina"
                android:text="Result"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="50dp"
                android:textColor="@color/black"
                android:textSize="35dp">
            </TextView>
            <TextView
                android:id="@+id/result_C"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:fontFamily="@font/adamina"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@color/white"
                android:layout_margin="15dp"
                android:textColor="@color/black"
                android:textSize="25dp">
            </TextView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>